.main_content
	#recipe_top.row
		.col-md-4
			= image_tag @recipe.image.url(:medium), class: "recipe_image"
		.col-md-8
			%div#recipe_info
				%h1= @recipe.title
				%p= @recipe.description
				%small
					Submitted by 
					= @recipe.user.email

	.row
		.col-md-6
			#ingredients
				%h2 Ingredients
				%ul
					-@recipe.ingredients.each do |ingredient|
						%li= ingredient.name
		.col-md-6
			#ingredients
				%h2 Ingredients
				%ul
					-@recipe.directions.each do |direction|
						%li= direction.step

	.row
		.col-md-12
			= link_to "Back", root_path, class: "btn btn-default"
			- if user_signed_in? and current_user.email == @recipe.user.email
				= link_to "Edit", edit_recipe_path, class: "btn btn-default"
				= link_to "Delete", recipe_path, method: :delete, class: "btn btn-default"